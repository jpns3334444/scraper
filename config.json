{
  "_comment": "US Real Estate Project Configuration - Single source of truth for all AWS resource names",

  "core": {
    "PROJECT": "real-estate-ai",
    "AWS_REGION": "us-east-1"
  },

  "stacks": {
    "AI_STACK": "real-estate-ai",
    "FRONTEND_STACK": "real-estate-ai-frontend"
  },

  "s3": {
    "DEPLOYMENT_BUCKET_PREFIX": "real-estate-ai-artifacts",
    "OUTPUT_BUCKET": "real-estate-ai-data",
    "FRONTEND_STATIC_BUCKET": "real-estate-ai-frontend"
  },

  "dynamodb": {
    "DDB_PROPERTIES": "real-estate-ai-properties",
    "DDB_URL_TRACKING": "real-estate-ai-urls",
    "DDB_USERS": "real-estate-ai-users",
    "DDB_USER_PREFERENCES": "real-estate-ai-user-preferences"
  },

  "lambda": {
    "_comment": "Lambda Function Names (stack prefix will be prepended)",
    "LAMBDA_URL_COLLECTOR": "url-collector",
    "LAMBDA_PROPERTY_PROCESSOR": "property-processor",
    "LAMBDA_PROPERTY_ANALYZER": "property-analyzer",
    "LAMBDA_FAVORITE_ANALYZER": "favorite-analyzer",
    "LAMBDA_DASHBOARD_API": "dashboard-api",
    "LAMBDA_FAVORITES_API": "favorites-api",
    "LAMBDA_REGISTER_USER": "register-user",
    "LAMBDA_LOGIN_USER": "login-user"
  },

  "api": {
    "API_NAME": "real-estate-ai-api",
    "LISTING_FETCH_SIZE": 300
  },

  "features": {
    "LEAN_MODE": "1"
  },

  "realtor": {
    "_comment": "Realtor.com scraper configuration",
    "TARGET_CITY": "Paonia",
    "TARGET_STATE": "CO",
    "BASE_URL": "https://www.realtor.com/realestateandhomes-search/Paonia_CO",
    "MAX_PAGES": 50
  },

  "scraper": {
    "_comment": "Scraper rate limiting settings",
    "MIN_DELAY_SECONDS": 3,
    "MAX_DELAY_SECONDS": 8,
    "MAX_CONCURRENT_REQUESTS": 2,
    "RETRY_ATTEMPTS": 3
  },

  "layers": {
    "BCRYPT_LAYER_OBJECT_VERSION": "latest",
    "OPENAI_VERSION": "1.99.3",
    "BCRYPT_VERSION": "4.1.2"
  },

  "secrets": {
    "OPENAI_API_KEY": "real-estate-ai/openai-api-key"
  }
}
